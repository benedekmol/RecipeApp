<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#7ea4b3</item>
        <item name="colorPrimaryDark">#7ea4b3</item>
        <item name="colorAccent">#7ea4b3</item>
        <item name="background">@color/design_default_color_error</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="titleTextColor">@color/cardview_light_background</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MainStyle">
        <item name="android:background">#CDCCCC</item>
        <item name="android:textColor">#C0F2F8</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TextStyle">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">#333131</item>
    </style>

    <style name="IngridientStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#114E03</item>
    </style>

</resources>